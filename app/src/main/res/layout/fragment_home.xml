<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 50% guideline keeps two equal columns on all screens -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Title and taglines -->
    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="TeleHealth+"
        android:textColor="#0B51FF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_tagline_pa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="ਪੰਜਾਬੀ ਟੈਗਲਾਈਨ (edit)"
        android:textColor="#2F7D32"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/text_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_tagline_en"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="If health is perfect, then everybody (is yours)"
        android:textColor="#1B5E20"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/text_tagline_pa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fragment-owned toolbar (works well when each screen customizes its app bar) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_welcome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#178BFF"
        app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
        app:navigationIconTint="@android:color/white"
        app:title="Welcome ABCxxx"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_tagline_en"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Row 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_medicine"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#0A0A0A"
        android:text="MEDICINE"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:icon="@drawable/btn_medicine"
        app:iconTint="@android:color/holo_green_light"
        app:iconPadding="8dp"
        app:iconGravity="top"
        app:layout_constraintTop_toBottomOf="@id/toolbar_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_consult"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#0A0A0A"
        android:text="CONSULT DOCTOR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:icon="@drawable/btn_consult"
        app:iconTint="@android:color/holo_blue_dark"
        app:iconPadding="8dp"
        app:iconGravity="top"
        app:layout_constraintTop_toBottomOf="@id/toolbar_welcome"
        app:layout_constraintStart_toStartOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Row 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reports"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#0A0A0A"
        android:text="MY REPORTS"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:icon="@drawable/btn_reports"
        app:iconTint="@android:color/holo_blue_dark"
        app:iconPadding="8dp"
        app:iconGravity="top"
        app:layout_constraintTop_toBottomOf="@id/btn_medicine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_symptom"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#0A0A0A"
        android:text="SYMPTOM CHECKER"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:icon="@drawable/btn_symptom"
        app:iconTint="@android:color/holo_green_light"
        app:iconPadding="8dp"
        app:iconGravity="top"
        app:layout_constraintTop_toBottomOf="@id/btn_consult"
        app:layout_constraintStart_toStartOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SOS button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sos"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#0A0A0A"
        android:text="EMERGENCY / SOS"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:icon="@drawable/btn_sos"
        app:iconTint="@android:color/holo_red_light"
        app:iconPadding="8dp"
        app:iconGravity="top"
        app:layout_constraintTop_toBottomOf="@id/btn_symptom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
